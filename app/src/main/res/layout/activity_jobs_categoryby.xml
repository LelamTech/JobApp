<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:foregroundTint="#433E3E"
    app:layout_wrapBehaviorInParent="included"
    tools:context="com.example.JobApp.jobs_categoryby">



    <Button
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:text="Home"
        android:drawableLeft="@android:drawable/ic_media_previous"

        />


    <ListView
        android:id="@+id/jobListingListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/vhome"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/vCategory"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/category" />

        <ImageButton
            android:id="@+id/vInqury"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/inquiry" />

        <ImageButton
            android:id="@+id/vProfile"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profilenav" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

