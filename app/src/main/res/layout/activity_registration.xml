<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/solid"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="388dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="30dp"
                android:text="Create Account"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#FDFBFB" />

            <EditText
                android:id="@+id/fullname_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_bg"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:hint="Full name"
                android:minHeight="48dp"
                android:inputType="text"
                android:textColor="#040303"
                android:textColorHint="#424242" />

            <EditText
                android:id="@+id/email_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_bg"
                android:drawableStart="@drawable/baseline_email_24"
                android:hint="Email Address"
                android:minHeight="48dp"
                android:inputType="textEmailAddress"
                android:textColor="#040303"
                android:textColorHint="#424242"
                tools:ignore="RtlCompat" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registration_password"
                android:layout_margin="10dp"
                android:hint="Password"
                android:minHeight="48dp"
                android:inputType="textPassword"
                android:background="@drawable/input_bg"
                android:scrollbarSize="15dp"
                android:textColorHint="#222323"
                app:boxBackgroundColor="#2BF433"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                app:passwordToggleEnabled="true"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_lock_open_24"
                android:drawableLeft="@drawable/baseline_lock_open_24" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registration_conf_password"
                android:layout_margin="10dp"
                android:minHeight="48dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawablePadding="20dp"
                android:background="@drawable/input_bg"
                android:scrollbarSize="15dp"
                android:textColorHint="#222323"
                app:boxBackgroundColor="#2BF433"
                android:drawableStart="@drawable/baseline_lock_open_24"
                android:drawableLeft="@drawable/baseline_lock_open_24"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/baseline_lock_open_24">

            </EditText>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:text="Register"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/btn_log_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account?  Log in"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:textColor="#F11909"
                android:textSize="15dp"
                app:backgroundTint="#140471"
                tools:ignore="TextSizeCheck"
                android:gravity="center_horizontal" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>